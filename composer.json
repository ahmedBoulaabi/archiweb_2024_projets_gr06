{
    "name": "groupe06/arch-ntiers",
    "description": "Application permettant un suivi des repas",
    "type": "project",
    "require": {
        "php": ">=7.3.12",
        "vlucas/phpdotenv": "*"
    },
    "autoload": {
        "psr-4": {
            "Manger\\": "app",
            "PHPMailer\\PHPMailer\\": "app/PHPMailer/src/",
            "Config\\": "Config/"
        },
        "files": [
            "app/Views/utils/global.php",
            "Config/Globals.php"
        ]
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "post-install-cmd": [
            "php init_database.php"
        ],
        "post-update-cmd": [
            "php init_database.php"
        ],
        "phpdoc": "phpDocumentor -d app Config -t doc --ignore app/PHPMailer/"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
